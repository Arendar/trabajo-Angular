              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/verVideos">Ver los vídeos existentes</a>
              </li>
              <li class="nav-item">
                <a href="/logout" class="btn btn-outline-danger"><i class=>Logout</i></a>
              </li>  
            </ul>            
          </div>
        </div>
      </nav>
      <div  eblclass="container">   
        <!-- <iframe width="420 px" height="315 px" frameborder="0" id="yutube" style="display : none;"></iframe> -->
        <!-- <iframe width="560" height="315" src="https://www.youtube.com/embed/QHoxR4Bgt3g" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> -->
        <% categorias.forEach((categoria)=>{ %>
          <div id="<%= categoria.id %>" class ="Categoria">
            <h3>
              <%= categoria.Nombre %>
            </h3>
            <% videos.forEach((video)=>{ %>
              <% if(video.idCat == categoria.id){ %>
                <p><%= video.Titulo %></p>
                <!--Poner id video en el botón-->
                <button ><a href="<%= video.Enlace %>" onclick="return mostrarVideo(this)"><%= video.id %></a></button>
                <iframe id="video_<%= video.id %>" src="" width="560 px" height="315 px" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              <% } %>
            <% }) %>
          </div>
          
          </tr>                                   
        <% }) %>   
      </div>
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
    <!-- Intento de encontrar un metodo para no pedir enlaces embebidos... -->
    <script>
      function mostrarVideo(obj){
        document.getElementById("video_" + obj.innerHTML).setAttribute("src", obj.href);
        return false;
      }
    </script>
  </body>
</html>