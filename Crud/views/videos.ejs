        <a href="/logout" class="btn btn-outline-danger"><i class=>Logout</i></a>
        </ul>            
      </div>
    </div>
  </nav>
      <div  eblclass="container">    
        <a href="createvideos" class="btn btn-outline-primary mt-4">CREAR</a>    
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>  
            <th scope="col">Enlace</th> 
            <th scope="col">Categoria</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% conjunto[0].forEach((Video)=>{ %>
            <tr>  
                <td><%= Video.id %></td>  
                <td><%= Video.Titulo %></td>
                <td><a href ="<%= Video.Enlace %><"><%= Video.Enlace %></a></td>
                <td>
                  <% conjunto[1].forEach((categoria)=>{ %>
                    <% if(Video.idCat == categoria.id){ %>
                        <%= categoria.Nombre %>
                      <% } %>
                  <% }) %>
                </td>
                <td>
                  <a href="/editvideos/<%= Video.id %>"  class="btn btn-outline-info"><i class='bx bxs-edit'></i>EDITAR</a>
                  <a href="/deletevideos/<%= Video.id %>"class="btn btn-outline-danger"><i class='bx bxs-trash-alt'>BORRAR</i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
</body>
</html>